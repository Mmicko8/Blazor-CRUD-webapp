<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Manga manager</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Mangas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Magazine">
                <span class="oi oi-book" aria-hidden="true"></span> Magazines
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Manga/Add">
                <span class="oi oi-plus" aria-hidden="true"></span> Create Manga
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Anime">
                <span class="oi oi-list" aria-hidden="true"></span> Animes
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() {
        collapseNavMenu = !collapseNavMenu;
    }

}